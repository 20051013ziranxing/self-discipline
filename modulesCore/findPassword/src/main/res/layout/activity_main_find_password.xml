<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFindPassword">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="找回密码"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView_EmailTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="邮箱账号"
        android:textSize="13sp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView_EmailNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="28dp"
        app:layout_constraintTop_toBottomOf="@id/textView_EmailTip"
        app:layout_constraintStart_toStartOf="parent"
        android:text="不好意思，网络出小差了"/>

    <TextView
        android:id="@+id/textView_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textView_EmailNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:text="邮箱验证码"/>

    <EditText
        android:id="@+id/editText_captcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="7dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="输入验证码"
        android:background="@drawable/background_find2"
        app:layout_constraintTop_toBottomOf="@id/textView_verify"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textView_getCaptcha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="25dp"
        android:textColor="#6EA5D5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/editText_captcha"
        android:text="点此获取验证码"/>

    <TextView
        android:id="@+id/textView_newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/editText_captcha"
        app:layout_constraintStart_toStartOf="parent"
        android:text="新密码"/>

    <EditText
        android:id="@+id/editText_newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:padding="7dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/background_find2"
        android:hint="输入新密码"
        app:layout_constraintTop_toBottomOf="@id/textView_newPassword"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/button_setNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置新密码"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/background_find1"
        app:layout_constraintTop_toBottomOf="@id/editText_newPassword"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>