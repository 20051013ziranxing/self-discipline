<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_Function"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account_security"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_FunctionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/imageView_Function"
        app:layout_constraintBottom_toBottomOf="@id/imageView_Function"
        android:layout_marginStart="10dp"
        android:text="账号与安全"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/come"
        android:background="#00ffffff"
        app:layout_constraintBottom_toBottomOf="@id/imageView_Function"/>

</androidx.constraintlayout.widget.ConstraintLayout>