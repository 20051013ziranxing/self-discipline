<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RadioGroup
        android:id="@+id/RadioGroup_111"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/pomodoro_countdown_1.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="倒计时"
            android:layout_marginEnd="25dp"
            android:textColor="@drawable/pomodoro_text_color_selector"
            android:background="@drawable/background_gray_4"
            android:padding="10dp"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/pomodoro_PositiveTiming_1.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正计时"
            android:textColor="@drawable/pomodoro_text_color_selector"
            android:background="@drawable/background_gray_4"
            android:padding="10dp"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/pomodoro_NoTimers_1.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不计时"
            android:layout_marginStart="25dp"
            android:textColor="@drawable/pomodoro_text_color_selector"
            android:background="@drawable/background_gray_4"
            android:padding="10dp"
            android:button="@null"/>

    </RadioGroup>

    <RadioGroup
        android:id="@+id/RadioGroup_222"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/RadioGroup_111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/pomodoro_25_minutes_2.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25分钟"
            android:textColor="@drawable/pomodoro_text_color_selector"
            android:background="@drawable/background_gray_4"
            android:padding="7dp"
            android:layout_marginEnd="15dp"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/pomodoro_35_minutes_2.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35分钟"
            android:textColor="@drawable/pomodoro_text_color_selector"
            android:background="@drawable/background_gray_4"
            android:padding="7dp"
            android:button="@null"/>

        <RadioButton
            android:id="@+id/pomodoro_free_minutes_2.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义"
            android:textColor="@drawable/pomodoro_text_color_selector"
            android:background="@drawable/background_gray_4"
            android:padding="7dp"
            android:layout_marginStart="15dp"
            android:button="@null"/>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>