<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginStart="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="四象限设置"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textView_30"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_gradle_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton_4"
                android:layout_width="@dimen/gradle_icon_size"
                android:layout_height="@dimen/gradle_icon_size"
                android:src="@drawable/four"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#00ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不重要不紧急"
                android:textColor="@color/four_blue"
                app:layout_constraintTop_toTopOf="@id/imageButton_4"
                app:layout_constraintBottom_toBottomOf="@id/imageButton_4"
                app:layout_constraintStart_toEndOf="@id/imageButton_4"
                android:layout_marginStart="0dp"/>

            <RadioButton
                android:id="@+id/radioButton_gradle4"
                android:layout_width="@dimen/gradle_icon_size"
                android:layout_height="@dimen/gradle_icon_size"
                app:layout_constraintTop_toTopOf="@id/imageButton_4"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_gradle_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton_3"
                android:layout_width="@dimen/gradle_icon_size"
                android:layout_height="@dimen/gradle_icon_size"
                android:src="@drawable/three_3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#00ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="不重要紧急"
                android:textColor="@color/three_green"
                app:layout_constraintTop_toTopOf="@id/imageButton_3"
                app:layout_constraintBottom_toBottomOf="@id/imageButton_3"
                app:layout_constraintStart_toEndOf="@id/imageButton_3"
                android:layout_marginStart="0dp"/>

            <RadioButton
                android:id="@+id/radioButton_gradle3"
                android:layout_width="@dimen/gradle_icon_size"
                android:layout_height="@dimen/gradle_icon_size"
                app:layout_constraintTop_toTopOf="@id/imageButton_3"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_gradle_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton_2"
                android:layout_width="@dimen/gradle_icon_size"
                android:layout_height="@dimen/gradle_icon_size"
                android:src="@drawable/two_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#00ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重要不紧急"
                android:textColor="@color/two_yellow"
                app:layout_constraintBottom_toBottomOf="@id/imageButton_2"
                app:layout_constraintStart_toEndOf="@id/imageButton_2"
                app:layout_constraintTop_toTopOf="@id/imageButton_2" />

            <RadioButton
                android:id="@+id/radioButton_gradle2"
                android:layout_width="@dimen/gradle_icon_size"
                android:layout_height="@dimen/gradle_icon_size"
                app:layout_constraintTop_toTopOf="@id/imageButton_2"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout_gradle_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/imageButton_1"
                android:layout_width="@dimen/gradle_icon_size"
                android:layout_height="@dimen/gradle_icon_size"
                android:src="@drawable/one_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#00ffffff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重要紧急"
                android:textColor="@color/one_red"
                app:layout_constraintTop_toTopOf="@id/imageButton_1"
                app:layout_constraintBottom_toBottomOf="@id/imageButton_1"
                app:layout_constraintStart_toEndOf="@id/imageButton_1"
                android:layout_marginStart="0dp"/>

            <RadioButton
                android:id="@+id/radioButton_gradle1"
                android:layout_width="@dimen/gradle_icon_size"
                android:layout_height="@dimen/gradle_icon_size"
                app:layout_constraintTop_toTopOf="@id/imageButton_1"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>