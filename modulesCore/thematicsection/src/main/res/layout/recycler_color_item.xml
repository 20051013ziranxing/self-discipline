<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="60dp"
    android:layout_height="60dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView_circle_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circular_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageButton
        android:id="@+id/imageView_circle_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ring_icon"
        android:background="#00ffffff"
        app:layout_constraintTop_toTopOf="@id/imageView_circle_in"
        app:layout_constraintBottom_toBottomOf="@id/imageView_circle_in"
        app:layout_constraintStart_toStartOf="@id/imageView_circle_in"
        app:layout_constraintEnd_toEndOf="@id/imageView_circle_in"/>


</androidx.constraintlayout.widget.ConstraintLayout>